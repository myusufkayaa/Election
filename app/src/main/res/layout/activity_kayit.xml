<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.KayitActivity">

    <EditText
        android:id="@+id/txtKmail"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/mailedittext"
        android:paddingLeft="50dp"
        android:textColorHint="#6873A5"
        android:textColor="#6873A5"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txtKpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtKpass"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="50dp"
        android:textColorHint="#6873A5"
        android:textColor="#6873A5"
        android:background="@drawable/passedittext"
        android:ems="10"
        android:hint="şifre"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/txtKpass2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtKpass2"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="50dp"
        android:textColorHint="#6873A5"
        android:textColor="#6873A5"
        android:background="@drawable/passedittext"
        android:ems="10"
        android:hint="tekrar şifre"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnKayit"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btnregister"
        android:onClick="clickKayit"
        app:layout_constraintEnd_toEndOf="@+id/txtKpass2"
        app:layout_constraintStart_toStartOf="@+id/txtKpass2"
        app:layout_constraintTop_toBottomOf="@+id/txtKpass2" />
</androidx.constraintlayout.widget.ConstraintLayout>